
@model NopAjaxCartSettingsModel

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="EnableOnProductPage_OverrideForStore" asp-input="EnableOnProductPage" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="EnableOnProductPage" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="EnableOnProductPage" />
                    <span asp-validation-for="EnableOnProductPage"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="EnableOnCatalogPages_OverrideForStore" asp-input="EnableOnCatalogPages" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="EnableOnCatalogPages" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="EnableOnCatalogPages" />
                    <span asp-validation-for="EnableOnCatalogPages"></span>
                </div>
            </div>
            <nop-nested-setting asp-for="EnableOnCatalogPages" id="EnableOnCatalogPagesPanel">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="EnableProductQuantityTextBox_OverrideForStore" asp-input="EnableProductQuantityTextBox" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="EnableProductQuantityTextBox" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="EnableProductQuantityTextBox" />
                        <span asp-validation-for="EnableProductQuantityTextBox"></span>
                    </div>
                </div>
            </nop-nested-setting>
        </div>
    </div>
</div>

<script type="text/javascript">
    (function ($, ssAdminCore) {

        $(document).ready(function () {
            ssAdminCore.registerToggleEvents("#@Html.IdFor(model => model.EnableOnCatalogPages)", "#EnableOnCatalogPagesPanel");
        });
    })(jQuery, sevenSpikesAdminCore);
</script>