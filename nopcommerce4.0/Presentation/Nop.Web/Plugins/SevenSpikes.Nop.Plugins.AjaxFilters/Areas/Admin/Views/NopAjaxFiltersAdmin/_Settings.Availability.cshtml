            //Toggle On Sale Filter by default setting
            ssAdminCore.registerToggleEvents("#@Html.IdFor(model => model.EnableOnSaleFilter)", "#CloseOnSaleFilterBoxPanel");

            //Toggle In Stock Filter by default setting
            ssAdminCore.registerToggleEvents("#@Html.IdFor(model => model.EnableInStockFilter)", "#CloseInStockFilterBoxPanel");
        });
    })(jQuery, sevenSpikesAdminCore);
</script>