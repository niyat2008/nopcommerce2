<script type="text/javascript">
    (function ($, ssAdminCore) {

        $(document).ready(function () {
            //Toggle Close Price Range by default setting
            ssAdminCore.registerToggleEvents("#@Html.IdFor(model => model.EnablePriceRangeFilter)", "#ClosePriceRangeFilterBoxPanel");

            //Toggle Specification Filter by default setting
            ssAdminCore.registerToggleEvents("#@Html.IdFor(model => model.EnableSpecificationsFilter)", "#CloseSpecificationsFilterBoxPanel");

            //Toggle Attribute Filter by default setting
