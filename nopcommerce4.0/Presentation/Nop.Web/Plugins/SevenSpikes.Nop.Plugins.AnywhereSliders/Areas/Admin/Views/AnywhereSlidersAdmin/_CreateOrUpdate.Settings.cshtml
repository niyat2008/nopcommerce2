                            </div>
                        </div>
                        <div class="form-group nivo-slider-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.NivoSettingsModel.ShowCaption" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.NivoSettingsModel.ShowCaption" />
                            </div>
                        </div>
                        <div class="form-group nivo-slider-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.NivoSettingsModel.Slices" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.NivoSettingsModel.Slices" />
                            </div>
                        </div>
                        <div class="form-group nivo-slider-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.NivoSettingsModel.BoxCols" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.NivoSettingsModel.BoxCols" />
                            </div>
                        </div>
                        <div class="form-group nivo-slider-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.NivoSettingsModel.BoxRows" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.NivoSettingsModel.BoxRows" />
                            </div>
                        </div>
                        <div class="form-group slider-2d-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.CarouselSettingsModel.AutoSlideInterval" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.CarouselSettingsModel.AutoSlideInterval" asp-postfix="@T("SevenSpikes.Plugins.Admin.InputStyles.Postfix.Milliseconds").Text"/>
                            </div>
                        </div>
                        <div class="form-group slider-2d-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.CarouselSettingsModel.Width" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.CarouselSettingsModel.Width" />
                            </div>
                        </div>
                        <div class="form-group slider-2d-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.CarouselSettingsModel.Height" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.CarouselSettingsModel.Height" />
                            </div>
                        </div>
                        <div class="form-group slider-2d-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.CarouselSettingsModel.Navigation" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.CarouselSettingsModel.Navigation" />
                            </div>
                        </div>
                        <div class="form-group slider-2d-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.CarouselSettingsModel.Links" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.CarouselSettingsModel.Links" />
                            </div>
                        </div>
                        <div class="form-group slider-2d-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.CarouselSettingsModel.HoverPause" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.CarouselSettingsModel.HoverPause" />
                            </div>
                        </div>
                        <div class="form-group slider-2d-setting advanced-setting">
                            <div class="col-md-3">
                                <nop-label asp-for="SettingsModel.CarouselSettingsModel.ShowTitle" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="SettingsModel.CarouselSettingsModel.ShowTitle" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @if (Model.Id > 0)
            {
                <div class="panel-group">
                    <div class="panel panel-default  advanced-setting">
                        <div class="panel-heading">
                            @T("SevenSpikes.Plugins.AnywhereSliders.Admin.Settings.Mappings")
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-3">
                                    <nop-label asp-for="StoreMappingModel.SelectedStoreIds" />
                                </div>
                                <div class="col-md-9">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <nop-select asp-for="StoreMappingModel.SelectedStoreIds" asp-items="Model.StoreMappingModel.AvailableStores" asp-multiple="true"/>
                                            <script>
                                                $(document).ready(function() {
                                                    var storesIdsInput = $('#@Html.IdFor(model => model.StoreMappingModel.SelectedStoreIds)').data("kendoMultiSelect");
                                                    storesIdsInput.setOptions({
                                                        autoClose: false
                                                    });

                                                    @if (Model.StoreMappingModel.AvailableStores.Count == 0)
                                                    {
                                                        <text>
                                                            storesIdsInput.setOptions({
                                                                enable: false,
                                                                placeholder: 'No stores available'
                                                            });
                                                            storesIdsInput._placeholder();
                                                            storesIdsInput._enable();
                                                        </text>
                                                    }
                                                });
                                            </script>
                                        </div>
                                        <div class="col-md-8">
                                            @await Component.InvokeAsync("MultistoreDisabledWarning")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>