@using SevenSpikes.Nop.Framework
@using SevenSpikes.Nop.Framework.MVCExtensions

@model MenuModel
    
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Enabled" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Enabled" />
                    <span asp-validation-for="Enabled"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="ShowDropdownsOnClick" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="ShowDropdownsOnClick" />
                    <span asp-validation-for="ShowDropdownsOnClick"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="Name" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Name" />
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <nop-label asp-for="CssClass" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="CssClass" />
                    <span asp-validation-for="CssClass"></span>
                </div>
            </div>
            <div class="form-group clearfix">
                <div class="col-md-3">
                    <nop-label asp-for="WidgetZone" />
                </div>
                <div class="col-md-9">                    
                    <nop-select asp-for="WidgetZone" asp-items="Model.SupportedWidgetZones" />
                </div>
            </div>
            @if (Model.Id > 0)
            {
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="MappingToStores.SelectedStoreIds" />
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-4">
                                <nop-select asp-for="MappingToStores.SelectedStoreIds" asp-items="Model.MappingToStores.AvailableStores" asp-multiple="true" />
                                <script type="text/javascript">
                                $(document).ready(function() {
                                    var storesIdsInput = $('#@Html.IdFor(model => model.MappingToStores.SelectedStoreIds)').data("kendoMultiSelect");
                                    storesIdsInput.setOptions({
                                        autoClose: false,
                                        filter: "contains"
                                    });

                                    @if (Model.MappingToStores.AvailableStores.Count == 0)
                                    {
                                         <text>
                                            storesIdsInput.setOptions({
                                                enable: false,
                                                placeholder: 'No stores available'
                                            });
                                            storesIdsInput._placeholder();
                                            storesIdsInput._enable();
                                        </text>
                                    }
                                });
                                </script>
                            </div>
                            <div class="col-md-8">
                                @await Component.InvokeAsync("MultistoreDisabledWarning")
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

