@model ProductRibbonModel

@{
    Layout = AdminViewLocations.AdminLayoutViewPath;
}

@{
    Html.AddCssFileParts("~/Plugins/SevenSpikes.Nop.Plugins.ProductRibbons/Areas/Admin/Content/Styles/adminstyles.css");

    Html.AddScriptParts("~/Plugins/SevenSpikes.Nop.Plugins.ProductRibbons/Areas/Admin/Content/Scripts/ProductRibbonsAdmin.min.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/jquery.json-2.4.min.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/jquery.livequery.min.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js");

    Html.SetActiveMenuItemSystemName("SevenSpikes.ProductRibbons.Admin.Submenus.ProductRibbons");
}

<form method="post" id="ribbon-form">
    <nop-antiforgery-token />
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("SevenSpikes.ProductRibbons.Admin.EditProductRibbonDetails") - @Model.RibbonGeneralInformation.Name
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("(" + T("SevenSpikes.ProductRibbons.Admin.BackToList") + ")", "List")</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="ribbon-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>

<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="ribbon-delete" />

<div id="ribbon-data" data-setRibbonPictureUrl="@Url.Action("SelectRibbonPicture", "ProductRibbonsAdmin")" data-noPictureLabelText="@T("SevenSpikes.ProductRibbons.Admin.RibbonPicture.NoPicture")"></div>