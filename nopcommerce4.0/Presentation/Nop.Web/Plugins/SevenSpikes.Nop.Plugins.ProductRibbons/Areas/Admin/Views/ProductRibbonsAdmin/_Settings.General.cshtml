@model ProductRibbonsSettingsModel

<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="Enabled_OverrideForStore" asp-input="Enabled" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="Enabled" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="Enabled" />
                    <span asp-validation-for="Enabled"></span>
                </div>
            </div>
            <div class="form-group advanced-setting">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="ProductBoxSelector_OverrideForStore" asp-input="ProductBoxSelector" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="ProductBoxSelector" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="ProductBoxSelector" />
                    <span asp-validation-for="ProductBoxSelector"></span>
                </div>
            </div>
            <div class="form-group advanced-setting">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="ProductBoxPictureContainerSelector_OverrideForStore" asp-input="ProductBoxPictureContainerSelector" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="ProductBoxPictureContainerSelector" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="ProductBoxPictureContainerSelector" />
                    <span asp-validation-for="ProductBoxPictureContainerSelector"></span>
                </div>
            </div>
            <div class="form-group advanced-setting">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="ProductPagePicturesParentContainerSelector_OverrideForStore" asp-input="ProductPagePicturesParentContainerSelector" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="ProductPagePicturesParentContainerSelector" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="ProductPagePicturesParentContainerSelector" />
                    <span asp-validation-for="ProductPagePicturesParentContainerSelector"></span>
                </div>
            </div>
            <div class="form-group advanced-setting">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="ProductPageBugPictureContainerSelector_OverrideForStore" asp-input="ProductPageBugPictureContainerSelector" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="ProductPageBugPictureContainerSelector" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="ProductPageBugPictureContainerSelector" />
                    <span asp-validation-for="ProductPageBugPictureContainerSelector"></span>
                </div>
            </div>
        </div>
    </div>
</div>