@model IList<ProductModel>

@{
    Layout = "";

    foreach (var item in Model)
    {
        <div class="item-box" data-productId="@item.Id">
            <div class="picture">
                <a href="@item.SeName" title="@item.Name" target="_blank">
                    <img alt="@item.Name" src="@item.PictureThumbnailUrl" />
                </a>
            </div>
            <h2 class="product-title">
                <a href="@item.SeName" title="@item.Name" target="_blank">@item.Name</a>
            </h2>
            <div class="product-price">@Math.Round(item.Price, 2)</div>
        </div>
    }

    if (Model.Count == 0)
    {
        <div class="callout bg-gray-light ss-info no-products-available">
            <i class="fa fa-exclamation-circle"></i>
            @T("SevenSpikes.SmartProductCollections.Public.NoProductsAvailable")
        </div>
    }
}