    @(Html.LocalizedEditor<ProductsGroupItemAdminModel, ProductsGroupItemLocalizedAdminModel>(string.Format("products-group-item-localized-title-{0}", Model.Id),
    @<div class="form-group">
         <div class="col-md-3">
             <nop-label asp-for="@Model.Locales[item].Title" />
         </div>
