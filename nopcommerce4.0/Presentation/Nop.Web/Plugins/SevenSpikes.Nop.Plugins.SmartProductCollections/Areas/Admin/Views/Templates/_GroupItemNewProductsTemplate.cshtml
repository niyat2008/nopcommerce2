         </div>
         <div>
             <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
         </div>
    </div>
    ,
          @<div class="form-group">
              <div class="col-md-3">
                  <nop-label asp-for="Title" />
              </div>
              <div class="col-md-9">
                  @Html.TextBoxFor(model => model.Title, new { @class = "group-item-title k-textbox" })
