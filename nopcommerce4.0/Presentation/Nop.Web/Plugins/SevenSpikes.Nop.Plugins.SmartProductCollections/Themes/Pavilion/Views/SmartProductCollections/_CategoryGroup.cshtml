@model CategoryGroupModel
@*amsfci*@
<div class="spc-header" style="margin-top: 25px !important;">
    <ul class="navigation">
        @foreach (var tab in Model.Tabs)
        {
            <li class="tab" data-tabId="@tab.Id" notloaded>
                <span  style="font-size: 20px">@tab.Title</span>
            </li>
        }
    </ul>


    <ul class="" style="float:none;">

        <li class="tab" style="background-color: #3e874b; color: white; font-size: 44px;" notloaded>
            <a href="@Url.RouteUrl("Category", new {SeName = Model.SeName})" title="@Model.Name">
                <span style="font-size: 20px">
                    <img src="@Model.PictureModel.FullSizeImageUrl" style="margin-bottom: -10px !important;" width="30" alt="@Model.PictureModel.Title" />
                    @Model.Name
                </span>
            </a>
        </li>

    </ul>

</div>

<div class="spc-body">

    <div class="category-products">
        @foreach (var tab in Model.Tabs)
        {
            <div class="product-grid" data-tabId="@tab.Id">
                <div class="item-grid">
                    @await Html.PartialAsync("_Grid", tab.Products)
                </div>
            </div>
        }
        <div class="loading-overlay">
            <span>@T("SevenSpikes.SmartProductCollections.Public.Loading")</span>
        </div>
    </div>
</div>



