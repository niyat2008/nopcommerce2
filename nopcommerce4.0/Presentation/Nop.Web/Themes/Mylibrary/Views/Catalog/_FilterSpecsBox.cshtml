@model CatalogPagingFilteringModel.SpecificationFilterModel
@using Nop.Web.Models.Catalog;
@{
    var notFilteredItemsGroups = Model.NotFilteredItems.GroupBy(x => x.SpecificationAttributeName);
}

@if (Model.Enabled)
{
    <div class="price-filter-area">
        <div class="area-title">
            <h2>@T("Filtering.SpecificationFilter")</h2>
        </div>
        <div class="filter-price">
            @if (Model.NotFilteredItems.Count > 0)
            {
                foreach (var group in notFilteredItemsGroups)
                {
                    var groupList = group.ToList();
                    //GQ
                    <div class="footer-title"><h2>@groupList[0].SpecificationAttributeName</h2></div>
                    <ul class="nav filterSpecs">
                        @foreach (var spec in groupList)
                        {
                            <li>
                                 <a href="@spec.FilterUrl"><i class="fa fa-caret-right" aria-hidden="true"></i> @spec.SpecificationAttributeOptionName</a>
                            </li>
                        }
                    </ul>
                }

            }
            @if (Model.AlreadyFilteredItems.Count > 0)
            {
                <div class="panel-footer">
                    <div class="area-title">
                        @T("Filtering.SpecificationFilter.CurrentlyFilteredBy")
                    </div>
                    @foreach (var item in Model.AlreadyFilteredItems)
                    {
                        <div class="item">
                            <strong>@(item.SpecificationAttributeName):</strong> @item.SpecificationAttributeOptionName
                        </div>
                    }

                    <div class="remove-filter">
                        <a href="@Model.RemoveFilterUrl">@T("Filtering.SpecificationFilter.Remove")</a>
                    </div>
                </div>
            }
        </div>
    </div>
}

















