@model CheckoutCompletedModel
@using Nop.Web.Models.Checkout;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Checkout").Text);
}
@if (!Model.OnePageCheckoutEnabled)
            {
                @Html.Action("CheckoutProgress", "Checkout", new { step = CheckoutProgressStep.Complete })
            }

<div class="billing_address_wrapper">
    <div class="row">
        <div class="col-lg-12">
            
       
<div class="form-panel">
    <div class="area-title">
        <h2>@T("Checkout.ThankYou")</h2>
    </div>
    <div class="billing_address_body">
        <div class="row">
             <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 cart-box-wr">
                 <div class="shipping_method_wrapper">   
					<div class="coupon-box offer offer-default">								
						<div class="title"><strong>@T("Checkout.YourOrderHasBeenSuccessfullyProcessed")</strong></div>
						<div class="hint">
							<div>
								@T("Checkout.OrderNumber"): @Model.OrderId
							</div>
							<div class="page_redirect_shopping">
								<div class="row">
									<div class="col-lg-3">
										<a class="btn btn-default order_detail_btn" href="@Url.RouteUrl("OrderDetails", new { orderID = Model.OrderId })">@T("Checkout.PlacedOrderDetails")</a>

									</div>
									<div class="col-lg-3">
										<input type="button" value="@T("Checkout.ThankYou.Continue")" class="btn btn-default continue_shopping_btn" onclick="setLocation('@Url.RouteUrl("HomePage")')" />
									</div>

								</div>
							</div>
						</div>
					<div>			
                </div>
            </div>
        </div>
    </div>
</div>
        </div>
    </div>
</div>
