@model SitemapModel
@using Nop.Web.Models.Common;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Sitemap").Text);
}
<div class="sitemap_wrapper">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
            <div class="customer_info_wrapper form-panel">
				<div class="area-title">
					<h2>@T("Sitemap")</h2>
                </div>
                <div class="myproduct_review_wrapper">
                    @if (Model.Topics.Count > 0)
                    {
                        <div class="entity">
                            <div id="legend" class="footer-title">
                                <h2><legend>@T("Sitemap.Topics")</legend></h2>
                            </div>
                            <div class="entity-body">
                                @foreach (var item in Model.Topics)
                                { 
                                    <div class="col-md-3"><a href="@Url.RouteUrl("Topic", new {Sename = item.SeName })">@item.Title</a></div>
                                }
                            </div>
                            <div class="clearfix space20"></div>
                            <div class="clearfix space20"></div>
                            <div class="clearfix space20"></div>
                        </div>
                    }
                    @if (Model.Categories.Count > 0)
                    {
                        <div class="entity">
                            <div id="legend" class="footer-title">
                                <h2><legend>@T("Sitemap.Categories")</legend></h2>
                            </div>
                            <div class="entity-body">
                    
                                @foreach (var category in Model.Categories)
                                { 
                                    <div class="col-md-3"><a href="@Url.RouteUrl("Category", new { SeName = category.SeName })">@category.Name</a></div>
                                }
                    
                            </div>
                            <div class="clearfix space20"></div>
                            <div class="clearfix space20"></div>
                            <div class="clearfix space20"></div>
                        </div>
            
                    }
                    @if (Model.Manufacturers.Count > 0)
                    {
                        <div class="entity">
                            <div id="legend" class="footer-title">
                                <h2><legend>@T("Sitemap.Manufacturers")</legend></h2>
                            </div>
                            <div class="entity-body">
                                @foreach (var manufacturer in Model.Manufacturers)
                                { 
                                    <div class="col-md-3"><a href="@Url.RouteUrl("Manufacturer", new { SeName = manufacturer.SeName })">@manufacturer.Name</a></div>
                                }
                            </div>
                            <div class="clearfix space20"></div>
                            <div class="clearfix space20"></div>
                            <div class="clearfix space20"></div>
                        </div>
                    }
                    @if (Model.Products.Count > 0)
                    {
                        <div class="entity">
                            <div id="legend" class="footer-title">
                                <h2><legend>@T("Sitemap.Products")</legend></h2>
                            </div>
                            <div class="entity-body">
                                @foreach (var product in Model.Products)
                                { 
                                    <div class="col-md-3"><a href="@Url.RouteUrl("Product", new { SeName = product.SeName })">@product.Name</a></div>
                                }
                            </div>
                            <div class="clearfix space20"></div>
                            <div class="clearfix space20"></div>
                            <div class="clearfix space20"></div>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

