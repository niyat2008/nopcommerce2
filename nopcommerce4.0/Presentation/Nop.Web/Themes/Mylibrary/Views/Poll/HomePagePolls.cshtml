@model IList<PollModel>
@using Nop.Web.Models.Polls;

@if (Model.Count > 0)
{
    <section class="slider-category-area">
        <div class="container">
            <div class="row">
                <div class="area-title">
                    <h2>@T("Polls.Title")</h2>
                </div>
                <div class="top-sell-product">
                    @{
    var i = 0;
                    }
                    @foreach (var poll in Model)
                    {
                        @Html.Partial("_Poll", poll)
                        if (i != 0)
                        {
                            @:<legend></legend>
                    }
                        i++;
                    }
                </div>
            </div>
        </div>
    </section>
}










