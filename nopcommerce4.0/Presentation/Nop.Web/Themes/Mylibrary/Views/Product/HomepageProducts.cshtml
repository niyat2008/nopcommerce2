@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
	<!-- new products-area start-->
    <div class="newproducts-area">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-header">
                    <div class="area-title">
                        <h2>@T("HomePage.Products")</h2> 
						@*<span style="margin: 10px 10px 10px 614px"></span>*@
                        <span class="slider_next_prev_btn">
                            <a class="prev_btn" href="#carousel-example-generic-homepage-product" data-slide="prev">
                                <i class="fa fa-angle-left"></i>
                            </a>
                            <a class="next_btn" href="#carousel-example-generic-homepage-product" data-slide="next">
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </span>                   
                    </div>
                </div>
            </div>
        </div>
        <div class="homePage_featured_product">
            <div id="carousel-example-generic-homepage-product" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @{
    var ci = 0;
                    }
                    @foreach (var item in Model)
                    {
                        if (ci == 0)
                        {
                            @:<div class="item active">
                            @:<div class="box-products">
                    }
                        else if (ci % 4 == 0)
                        {
                            @:<div class="item">
                            @:<div class="box-products">
                    }

                    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                        <div class="offer offer-default silde-show-offer pull-text-center">
                            @Html.Partial("_ProductBox", item)
                        </div>
                    </div>

                        if (ci % 4 == 3)
                        {
                            @:</div>
                            @:</div>
                        }
                        ci++;
                    }
                    @if (ci % 4 == 2)
                    {
                        @:</div>
                        @:</div>
                    }
                </div>
                <!-- Controls -->
            </div>
        </div>
    </div>
    @:<br />
}







