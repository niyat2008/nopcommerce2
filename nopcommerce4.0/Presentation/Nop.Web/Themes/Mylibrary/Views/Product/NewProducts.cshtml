@model IList<ProductOverviewModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.NewProducts").Text);
}
@using Nop.Web.Models.Catalog;
<div class="page recently-added-products-page new_product_wrapper">
    <div class=" mid-content-title">
        <div class="alignright">
            <a href="@Url.RouteUrl("NewProductsRSS")" class="pull-right header-rss" title="@T("Products.NewProducts.RSS.Hint")"><i class="fa fa-rss fa-2x header-rss-icon"></i></a>
        </div>
        <h2>@T("Products.NewProducts")</h2>
    </div>
    <div class="page-body">
        @if (Model.Count > 0)
        {
            <div class="product-list">
               @foreach (var product in Model)
               {
                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <div class="offer offer-default">
                        @Html.Partial("_ProductBox", product)
                    </div>
                </div>
               }
            </div>        
        }
    </div>
</div>


