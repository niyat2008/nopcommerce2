@model ProductDetailsModel.GiftCardModel
@using Nop.Web.Models.Catalog;
@if (Model.IsGiftCard)
{
    <div class="giftcard form-inline">
		<div class="row">
			<div class="form-group">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form_top_margin">
					@Html.LabelFor(model => model.RecipientName, new { }, ":") 
					@Html.TextBoxFor(model => model.RecipientName, new { @class = "recipient-name form-control" })
				</div>
			</div>
			@if (Model.GiftCardType == Nop.Core.Domain.Catalog.GiftCardType.Virtual)
			{
				<div class="form-group">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form_top_margin">
						@Html.LabelFor(model => model.RecipientEmail, new { }, ":")           
						@Html.TextBoxFor(model => model.RecipientEmail, new { @class = "recipient-email form-control" })
					</div>
				</div>
			}
			<div class="form-group">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form_top_margin">
						@Html.LabelFor(model => model.SenderName, new { }, ":")         
						@Html.TextBoxFor(model => model.SenderName, new { @class = "sender-name form-control" })
					</div>
				</div>
			@if (Model.GiftCardType == Nop.Core.Domain.Catalog.GiftCardType.Virtual)
			{
				<div class="form-group">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form_top_margin">
						@Html.LabelFor(model => model.SenderEmail, new { }, ":")        
						@Html.TextBoxFor(model => model.SenderEmail, new { @class = "sender-email form-control" })
					</div>
				</div>
			}
			<div class="form-group">
					<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form_top_margin">
						@Html.LabelFor(model => model.Message, new { }, ":")     
						@Html.TextAreaFor(model => model.Message, new { @class = "form-control", rows="2",cols="" })
					</div>
				</div>
		</div>
	</div>
}