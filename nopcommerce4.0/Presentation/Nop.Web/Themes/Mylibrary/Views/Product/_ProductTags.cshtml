@model IList<ProductTagModel>
@using Nop.Web.Models.Catalog;
@if (Model != null && Model.Count > 0)
{
       <div class="product-tags-box">
            <ul>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <li><i class="fa fa-tag" aria-hidden="true"></i> 
                        <a href="@Url.RouteUrl("ProductsByTag", new { productTagId = Model[i].Id, SeName = Model[i].SeName })" class="producttag">
                            @Model[i].Name</a> <span>@T("Products.Tags.Count", Model[i].ProductCount)</span></li>
                    if (i != Model.Count - 1)
                    {
                    <!-- <li>,</li> -->
                    }
                }
            </ul>
        </div>


}