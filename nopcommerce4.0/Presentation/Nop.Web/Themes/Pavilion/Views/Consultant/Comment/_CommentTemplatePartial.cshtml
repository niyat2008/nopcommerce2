
@model Nop.Web.Models.Consultant.Comment.CommentModel


 

<div class="comments">
    <!-- Comment -->
    <div class="comment">
        <div class="row">
         
                <div class="col-xs-10">
                    @if (Model.CommentedBy != "Registered")
                    {
                        <h4 class="text-danger"><strong class="text-danger">المستشار: </strong>@Model.CommentOwner</h4>
                    }
                    else
                    {
                        <h4>@Model.CommentOwner</h4>

                    }

                    <span>@Model.DateCreated.ToLongDateString() &nbsp;&nbsp;&nbsp; @Model.DateCreated.ToString("hh:mm:ss")</span>
                    <p style="width:fit-content;">
                        @Model.Text
                    </p>
                    <div class="row" style="padding-right: 20px;  ">
                        @foreach (var image in Model.Photos)
                        {
                            <div style="width:60px;display:inline;">
                                <a href="/Consultations/Imgs/@image" data-lightbox="image-@Model.Id" data-title="My caption">
                                    <img src="/Consultations/Imgs/@image" alt="Single Image" style="width:50px;height:50px;" />
                                </a>
                            </div>
                        }
                    </div>

                    @*<a>رد</a>*@


                </div>
        </div>
       
    </div><hr />
</div>
