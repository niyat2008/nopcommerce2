<script>

    $(document).ready(function () {

        $.ajax({
            type: 'GET',
            url: '@Url.RouteUrl("Consultant.User.GetUserInfo")',

            success: function (data) {
                $("#userInfo").html(data);
            }
        });


        $.ajax({
            type: 'GET',
            url: '@Url.RouteUrl("Consultant.Navbar")',

            success: function (data) {
                $("#Nav").html(data);
            }
        });

        $.ajax({
            type: 'GET',
            url: '@Url.RouteUrl("Consultant.User.GetUserRoles")',

            success: function (data) {
                $("#threebuttons").html(data);
            }
        });

    });




    function login() {
        window.location.href = "login?returnUrl=consultations";
    }


    function goToHome() {
        window.location.href = '@Url.RouteUrl("Consultant.ConsultantHome")';
    }


    function filterWithText() {
        var Term = $("#searchText").val();

        if (Term) {

            window.location.href = '@Url.RouteUrl("Consultant.Post.Search")'+"?Term=" + Term;
        }
        else {
            alert("ادخل كلمات للبحث");
        }
    }


</script>

