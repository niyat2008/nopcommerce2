 @model Nop.Web.Models.ConsultantAdmin.Customers.CustomersModel


@{ 
    ViewBag.Title = "Consultants";
    Layout = "~/Themes/Pavilion/Views/ConsultantAdmin/shared/_Layout.cshtml";
}

@Html.Partial("~/Themes/Pavilion/Views/ConsultantAdmin/Shared/_DataTable.cshtml")



<div class="page-title">المستشارين</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover" id="customers">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>---</th>
            </tr>
        </thead>
    </table>
</div>




<script>
    var dataTable = $("#customers").DataTable({
    "serverSide":"true",
    "responsive": "true",
    "processing":"true",
    "autoWidth": "true",
    //"order": [[0, "des"]],
    "ajax": {

        "url":"/Consultations/Admin/Customer/GetConsultantsAjax",
    "dataType": "json",
    "type":"post"
    },

    "columns": [
        { "data": "Id", "name": "Id", "width": "5%" },
        { "data": "Username","width":"5%"},
        { "data": "Email"},
        { "data": "Mobile","width":"35%"},
    
    {
        "data": "Id",
    "render": function (data) {
        return "<a id='details' href='/Consultations/Admin/Customer/GetConsultantDetails?email=" + data + "' class='btn btn-default btn-small' data-post-id=" + data + "><i class='fa fa-eye'></i> التفاصيل </a>" + " " + "<a class='btn btn-default btn-small' href='/Consultations/Admin/Customer/GetConsultantPosts?consultantId=" + data + "'  data-post-id=" + data + ">الاستشارات</a>"  + " " + "<button class='btn btn-danger' id='delete' data-post-id=" + data + "><i class='fa fa-trash'></i>حذف</button>" ;

    }

    }


    ],
    "language": {
    "sProcessing": "جارٍ التحميل...",
