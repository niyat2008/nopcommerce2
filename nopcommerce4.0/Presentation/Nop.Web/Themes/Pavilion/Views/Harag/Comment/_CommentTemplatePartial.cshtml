
@model Nop.Web.Models.Harag.Comment.CommentModel

<div class="comment">
    <div class="commentHeader"> 
        <div class=" adxExtraInfo">
            <div class="adxExtraInfoPart"> 
                ››
                &nbsp;  <a href="/Harag/User/@Model.CommentOwner" class="username">@Model.CommentOwner</a>   
            </div> 
            <div  class="pull-left adxExtraInfoPart"> 
                @*<div class="moveLeft">
                    ››
                    <a href="#1" name="1">1</a>
                </div>*@ 
            </div>
        </div> 
        ››
