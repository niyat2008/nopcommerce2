@model CustomerNavigationModel
@{
    int counterToSkip3_4_item = 0;
}
<div class="block block-account-navigation">
    <div class="title">
        <strong>@T("Account.Navigation")</strong>
    </div>
    <div class="listbox">
        <ul class="list">
            @await Component.InvokeAsync("Widget", new { widgetZone = "account_navigation_before" })
            @foreach (var item in Model.CustomerNavigationItems)
            {

                @if (counterToSkip3_4_item == 3 || counterToSkip3_4_item == 4)
                {
                    @(++counterToSkip3_4_item)
                    continue;
                }

                <li class="@item.ItemClass">
                    <a href="@Url.RouteUrl(item.RouteName)" class="@(Model.SelectedTab == item.Tab ? "active" : "inactive")">@(item.Title)</a>
                </li>
                @(++counterToSkip3_4_item)
            }
            @await Component.InvokeAsync("Widget", new { widgetZone = "account_navigation_after" })
        </ul>
    </div>
</div>
