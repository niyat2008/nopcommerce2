@model ManufacturerNavigationModel
@if (Model.Manufacturers.Count > 0)
{

    <div class="spc spc-products support-rtl"  >
        <div class="spc-header">
            <h2 class="title"><span>  <strong>@T("Manufacturers")</strong></span></h2> 
        </div>
       

            <div class="block block-manufacturer-navigation" style="width:100%!important; text-align:center!important;">
             
              

                <div class="spc-body">
                   
                    <div class="listbox">
                       
                        <ul class="list">
                            @for (int counter = 0; counter < Model.Manufacturers.Count; counter++)
                            {
                                if (counter > 12)
                                {
                                    break;
                                }

                                var manufacturer = Model.Manufacturers[counter];

                                <li class="@(manufacturer.IsActive ? "active" : "inactive")" style="float: left">
                                    <a title="@manufacturer.Name" href="@Url.RouteUrl("Manufacturer", new { SeName = manufacturer.SeName })">
                                        <img style="margin-left: 20px; margin-right: 18px;" src="data:image/jpeg;base64,@manufacturer.ImageUrl" />
                                    </a>
                                </li>
                            }
                        </ul>
                        <div style="clear: both"></div>

                        <div class="view-all">
                            <a href="@Url.RouteUrl("ManufacturerList")">@T("Manufacturers.ViewAll")</a>
                        </div>
                    </div>
                    <div class="listbox1">
                        <ul class="list">


                            @for (int counter = 0; counter < Model.Manufacturers.Count; counter++)
                            {
                                if (counter > 12 )
                                {
                                    break;
                                }
                                
                                var manufacturer = Model.Manufacturers[counter];

                               
                                <li class="@(manufacturer.IsActive ? "active" : "inactive")">
                                    <a title="@manufacturer.Name" href="@Url.RouteUrl("Manufacturer", new { SeName = manufacturer.SeName })">
                                        <img src="data:image/jpeg;base64,@manufacturer.ImageUrl" />
                                    </a>
                                </li>
                                 
                            }
                        </ul>
                        <div style="clear: both"></div>
                    </div>
                </div>
        </div>
    </div>
    //amsfci
   
}